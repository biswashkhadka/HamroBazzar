<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:text="Find what your are looking for?"
                android:layout_marginLeft="20dp"
                android:textStyle="italic"
                android:shadowColor="@android:color/transparent"
                android:paddingTop="10dp"
                android:textSize="13dp"
                android:drawableRight="@drawable/ic_search_black_24dp"
                android:textColor="#909899"
                android:layout_marginTop="10dp"

                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Post FREE Ad"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textStyle="italic"
                android:drawableLeft="@drawable/ic_create_black_24dp"

                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Mobile Handset"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:textStyle="italic"
                android:drawableLeft="@drawable/ic_smartphone_black_24dp"

                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Laptops/Notebooks"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:textStyle="italic"
                android:drawableLeft="@drawable/ic_laptop_mac_black_24dp"

                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>